


<div class="col-md-4">
  <%= simple_form_for(@applicant) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :email %>
      <%= f.input :phone %>
      <%= f.input :skype %>
      <%= f.input :public %>
      <%= f.input :experience %>
      <%= f.input :comment %>
      <%= f.input :attach, as: :file %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>